import java.util.Scanner;
public class pattern {
    public static void main(String[] args) {
        Scanner scanner=new Scanner(System.in);
        int n,i,j;
        System.out.print("enter the number:");
        n=scanner.nextInt();
        for(i=0;i<=n;i++)
        {
            for(j=0;j<=i;j++)
            {
                System.out.print("%");
            }
            System.out.println();
        }
        System.out.close();
    }
}
